{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "coderv1",
  "title": "coder v1",
  "description": "Manage Coder v1 Workspaces",
  "icon": "icon-rounded.png",
  "author": "xanwtf",
  "owner": "embold",
  "categories": [
    "Developer Tools"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Search Coder Workspaces",
      "description": "Search Coder Workspaces",
      "mode": "view"
    },
    {
      "name": "shutdown",
      "title": "Shutdown All Coder Workspaces",
      "description": "Shutdown Coder Workspace",
      "mode": "no-view"
    },
    {
      "name": "startWorkspace",
      "title": "Start Workspace",
      "description": "Start a Coder Workspace",
      "mode": "view",
      "arguments": [
        {
          "name": "workspace",
          "placeholder": "Workspace",
          "type": "text",
          "required": true
        }
      ]
    },
    {
      "name": "stopWorkspace",
      "title": "Stop Workspace",
      "description": "Stop a Coder Workspace",
      "mode": "view",
      "arguments": [
        {
          "name": "workspace",
          "placeholder": "Workspace",
          "type": "text",
          "required": true
        }
      ]
    },
    {
      "name": "rebuildConfig",
      "title": "Rebuild SSH Config",
      "description": "Runs the command for if you've added a new workspace and need to update your local SSH config.",
      "mode": "no-view"
    },
    {
      "name": "userList",
      "title": "User List with IDs - Must Run for Initial Setup",
      "description": "Used to get Coder User ID for extension preferences",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "title": "Coder API Key",
      "name": "coderAPIKey",
      "description": "Generate with 'coder tokens create raycast'",
      "type": "textfield",
      "required": true,
      "defaultValue": ""
    },
    {
      "title": "Coder User ID",
      "name": "coderUserID",
      "description": "Pull from Coder API. ex: 61abedde-2eef5f93c4cbd76382c209ab",
      "type": "textfield",
      "required": false,
      "defaultValue": ""
    },
    {
      "title": "Coder Username",
      "name": "coderUserName",
      "description": "Coder Username",
      "type": "textfield",
      "required": false,
      "defaultValue": ""
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.56.0",
    "@raycast/utils": "^1.4.8",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@raycast/eslint-config": "1.0.5",
    "@types/lodash": "^4.14.196",
    "@types/node": "18.8.3",
    "@types/react": "18.0.9",
    "eslint": "^7.32.0",
    "lodash": "^4.17.21",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
